<% include ../partials/header.ejs %>

<main class="classroom">
    <div class="classroom__heading-container">
        <div class="classroom__heading-content-container">
            <h1 class="classroom__heading">
                <%= room.name %>
            </h1>
            <div class="classroom__controls">
                <div class="classroom__control-group">
                    <div class="button status--on">
                        <% include ../svg/video.ejs %>
                        <span>Turn off Camera</span>
                    </div>
                    <div class="button status--on">
                        <% include ../svg/mic.ejs %>
                        <span>Mute Mic</span>
                    </div>
                </div>
                <div class="classroom__control-divider"></div>
                <div class="classroom__control-group">
                    <a class="button-link" href="/workgroups">
                        <div class="button button-sq button-purple">
                            <% include ../svg/table.ejs %>
                            <span>Create workgroup with current table</span>
                        </div>
                    </a>
                    <a class="button-link" href="/classes">
                        <div class="button button-sq button-red">
                            <% include ../svg/exitClass.ejs %>
                            <span>Leave Class</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="classroom__container">
        <div class="classroom__teacher-container">
            <div class="classroom__video video-teacher">
                <video src="/files/video/teacher.mp4" muted autoplay loop></video>
            </div>
        </div>
        <div class="classroom__student-container">
            <div class="classroom__video video-student video-personal">
                <div class="video-status">
                    <div class="status-icon status--video status--on">
                        <% include ../svg/video.ejs %>
                    </div>
                    <div class="status-icon  status--mic status--on">
                        <% include ../svg/mic.ejs %>
                    </div>
                </div>
            </div>
            <div class="classroom__video video-student">
                <div class="video-status">
                    <div class="status-icon  status--mic status--on">
                        <% include ../svg/mic.ejs %>
                    </div>
                </div>
            </div>
            <div class="classroom__video video-student">
                <div class="video-status">
                    <div class="status-icon  status--mic status--on">
                        <% include ../svg/mic.ejs %>
                    </div>
                </div>
            </div>
            <div class="classroom__video video-student">
                <div class="video-status">
                    <div class="status-icon  status--mic status--on">
                        <% include ../svg/mic.ejs %>
                    </div>
                </div>
            </div>
        </div>
        <div class="classroom__chat-container">
            <div class="classroom__chat-channel">
                <div class="channel-select active">
                    <% include ../svg/table.ejs %>
                    <span>Table</span>
                </div>
                <div class="channel-select">
                    <% include ../svg/door.ejs %>
                    <span>Class</span>
                </div>
            </div>
            <div class="classroom__chat-box-container">
                <div class="classroom__chat-box">
                    <div class="classroom__chat-message message-user">
                        <span class="author">
                            Table A - U. Ser
                        </span>
                        <span class="date">
                            11:23
                        </span>
                        <span class="msg">
                            User Message
                        </span>
                    </div>
                    <div class="classroom__chat-message message-teacher">
                        <span class="author">
                            Teacher
                        </span>
                        <span class="date">
                            11:24
                        </span>
                        <span class="msg">
                            User Message
                        </span>
                    </div>
                    <div class="classroom__chat-message message-table">
                        <span class="author">
                            Table A - M. Sleebos
                        </span>
                        <span class="date">
                            11:25
                        </span>
                        <span class="msg">
                            User Message
                        </span>
                    </div>
                </div>
            </div>
            <div class="classroom__chat-input-container">
                <input class="classroom__chat-input" type="text">
                <input class="classroom__chat-send" type="button" value="">
            </div>
        </div>
        <div class="classroom__tables-container">
            <h1 class="classroom__tables-heading">Tables</h1>
            <div class="classroom__tables">
                <ul class="classroom__tables-list">
                    <li class="classroom__tables-list-item">
                        <span class="classroom__table-label">
                            Table A
                        </span>
                        <div class="table"></div>
                        <input class="classroom__chair" type="radio" name="table-1" id="t1-1">
                        <input class="classroom__chair" type="radio" name="table-1" id="t1-2">
                        <input class="classroom__chair" type="radio" name="table-1" id="t1-3">
                        <input class="classroom__chair" type="radio" name="table-1" id="t1-4">
                    </li>
                    <li class="classroom__tables-list-item">
                        <span class="classroom__table-label">
                            Table B
                        </span>
                        <div class="table"></div>
                        <input class="classroom__chair" type="radio" name="table-2" id="t2-1">
                        <input class="classroom__chair" type="radio" name="table-2" id="t2-2">
                        <input class="classroom__chair" type="radio" name="table-2" id="t2-3">
                        <input class="classroom__chair" type="radio" name="table-2" id="t2-4">
                    </li>
                    <li class="classroom__tables-list-item">
                        <span class="classroom__table-label">
                            Table C
                        </span>
                        <div class="table"></div>
                        <input class="classroom__chair" type="radio" name="table-3" id="t3-1">
                        <input class="classroom__chair" type="radio" name="table-3" id="t3-2">
                        <input class="classroom__chair" type="radio" name="table-3" id="t3-3">
                        <input class="classroom__chair" type="radio" name="table-3" id="t3-4">
                    </li>
                </ul>
            </div>
        </div>
    </div>

</main>

<% include ../partials/footer.ejs %>